{
  "$schema": "https://raw.githubusercontent.com/flatpak/flatpak-builder/main/data/flatpak-manifest.schema.json",
  "id": "com.connorcode.mslicer",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "mslicer",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc",
    "--filesystem=host"
  ],
  "modules": [
    {
      "name": "mslicer",
      "buildsystem": "simple",
      "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": { "CARGO_HOME": "/run/build/mslicer/cargo" }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml",
        "cargo --offline build -r -p mslicer",
        "install -Dm 755 target/release/mslicer -t /app/bin",
        "install -Dm 644 com.connorcode.mslicer.desktop -t /app/share/applications",
        "install -Dm 644 com.connorcode.mslicer.metainfo.xml -t /app/share/metainfo",
        "install -Dm 644 icon.png /app/share/icons/hicolor/128x128/apps/com.connorcode.mslicer.png"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/connorslade/mslicer",
          "commit": "098b84b756b9c9bdf00b7b61752170ebffb469a1"
        },
        {
          "type": "file",
          "path": "com.connorcode.mslicer.metainfo.xml"
        },
        {
          "type": "file",
          "path": "com.connorcode.mslicer.desktop"
        },
        {
          "type": "file",
          "path": "icon.png"
        },
        "cargo-sources.json"
      ]
    }
  ]
}
